{
    "name": "norse-blue/laravel-heimdall",
    "description": "Heimdall is a code-driven authorization system for Laravel.",
    "keywords": [
        "norse blue",
        "norse-blue",
        "heimdall",
        "laravel-heimdall",
        "authorization",
        "code-driven"
    ],
    "type": "library",
    "homepage": "https://github.com/norse-blue/laravel-heimdall",
    "license": "MIT",
    "authors": [
        {
            "name": "Axel Pardemann",
            "email": "axel.pardemann@norse.blue",
            "homepage": "https://norse.blue",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "norse-blue/handy-properties": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "jetbrains/phpstorm-attributes": "^1.0",
        "nunomaduro/collision": "^6.2",
        "nunomaduro/phpinsights": "^2.3",
        "orchestra/testbench": "^7.4",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2",
        "phpstan/phpstan": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "NorseBlue\\Heimdall\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NorseBlue\\Heimdall\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --ansi",
        "analyze:github": "phpstan analyze --error-format=github",
        "check": [
            "@style:check",
            "@test",
            "@analyze"
        ],
        "check:coverage": [
            "@style:check",
            "@test:coverage",
            "@analyze"
        ],
        "insights": "phpinsights --no-interaction",
        "insights:summary": "phpinsights --no-interaction --summary",
        "style:check": "phpcs",
        "style:fix": "phpcbf || phpcs",
        "test": "pest --colors=always",
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "pest --colors=always --coverage-text --coverage-clover=./build/coverage.xml --coverage-html=./build/coverage"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "NorseBlue\\Heimdall\\HeimdallServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/axelitus"
        },
        {
            "type": "other",
            "url": "https://ko-fi.com/axelitus"
        },
        {
            "type": "other",
            "url": "https://www.buymeacoffee.com/axelitus"
        }
    ]
}
